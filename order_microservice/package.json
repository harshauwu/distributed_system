{
  "name": "order_microservice",
  "version": "1.0.0",
  "description": "This is a order microservice for distributed system",
  "main": "index.js",
  "scripts": {
    "start": "node ./bin/server",
    "start-watch": "nodemon ./bin/server",
    "test": "APP=test jest --testTimeout=10000 --runInBand ./tests/**/*.test.js",
    "test-one": "APP=test jest --testTimeout=10000 --runInBand ",
    "test-watch": "APP=test jest --testTimeout=10000 --runInBand ./tests/**/*.test.js --watchAll",
    "test-coverage": "APP=test jest --testTimeout=10000 --runInBand ./tests/**/*.test.js --coverage"
  },
  "author": "Harsha Lakmal",
  "license": "ISC",
  "dependencies": {
    "aws-sdk": "^2.1093.0",
    "config": "^3.3.7",
    "express": "^4.17.3",
    "express-validator": "^6.14.0",
    "helmet": "^5.0.2",
    "mongoose": "^5.6.11",
    "mongoose-validator": "^2.1.0",
    "moment": "^2.24.0",
    "dotenv": "^8.1.0",
    "i18n": "^0.13.3",
    "swagger-jsdoc": "^6.1.0",
    "swagger-ui-express": "^4.1.6",
    "parse-error": "^0.2.0",
    "body-parser": "^1.19.0",
    "morgan": "^1.9.1",
    "cls-hooked": "^4.2.2",
    "cls-rtracer": "^1.3.0",
    "cors": "^2.8.5",
    "debug": "^4.1.1",
    "winston": "^3.2.1",
    "lodash": "^4.17.15"
  },
  "devDependencies": {
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "faker": "^4.1.0",
    "husky": "^3.1.0",
    "jest": "^26.6.3",
    "jest-chain": "^1.1.5",
    "jest-extended": "^0.11.5",
    "lint-staged": "^9.2.5",
    "mocha": "^6.2.0",
    "nyc": "^15.0.0",
    "prettier": "1.18.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged",
      "pre-push": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
